{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "guh",
  "version": "0.1.0",
  "identifier": "uk.cmzi.guh",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Guh Software.exe",
        "width": 460,
        "height": 420,
        "decorations": false,
        "resizable": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "appimage",
      "deb",
      "nsis",
      "app",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "2026 Cameron Redmore",
    "category": "Utility",
    "shortDescription": "Guh Software",
    "longDescription": "The classic Guh Software application."
  }
}